body{
     background-attachment: fixed;
     background-image:url(http://3.bp.blogspot.com/-7-9pDyvcgXM/Tdb6h9dNvAI/AAAAAAAAD98/FxG_rZ7DPkE/s1600/bg1.jpg);
     background-repeat: repeat;
    }

button {
    border-radius: 0.4em;
    border: 0;
    margin: 0.3em;
    font-size: 1em;
    width: 6em;
    height: 2em;
    color: white;
    outline: none;
    background: linear-gradient(0deg, #363333, #7d7d7d);
}
button:active {
    border-radius: 0.4em;
    border: 0;
    background: linear-gradient(180deg, #363333, #7d7d7d);
}
.sel{
    color: #8080f0;
    box-shadow: 0 0 4em 1.2em #5050f8;  
}
